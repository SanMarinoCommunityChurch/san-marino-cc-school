---
import IntroSection from "./IntroSection.astro";
const { content } = Astro.props;

function isOdd(num) {
  return num % 2;
}
---

<div>
  <div class="center-items mb-12">
    {content.heading && <h2 class="text-4xl mb-6">{content.heading}</h2>}
    {
      content.text && (
        <p class="text-2xl leading-normal max-w-3xl">{content.text}</p>
      )
    }
  </div>
  <div class="features flow gap-12">
    {
      content.entries.map((entry, index) => {
        return (
          <IntroSection
            content={entry}
            layout={isOdd(index) ? "flipped" : "default"}
          />
        );
      })
    }
  </div>
</div>
